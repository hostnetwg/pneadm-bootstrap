[mysqld]
# Zwiększone limity dla importu dużych plików
max_allowed_packet = 512M
innodb_buffer_pool_size = 1G
innodb_log_file_size = 256M
innodb_log_buffer_size = 64M
innodb_flush_log_at_trx_commit = 2
innodb_flush_method = O_DIRECT

# Zwiększone limity połączeń i timeoutów
max_connections = 200
wait_timeout = 600
interactive_timeout = 600
net_read_timeout = 600
net_write_timeout = 600

# Optymalizacja dla importu
bulk_insert_buffer_size = 64M
key_buffer_size = 256M
tmp_table_size = 256M
max_heap_table_size = 256M
sort_buffer_size = 4M
read_buffer_size = 2M
read_rnd_buffer_size = 4M

# Wyłącz sprawdzanie kluczy obcych podczas importu (szybsze)
# foreign_key_checks = 0  # Odkomentuj tylko podczas importu!

# Wyłącz sprawdzanie unikalności podczas importu (szybsze)
# unique_checks = 0  # Odkomentuj tylko podczas importu!

[mysql]
# Zwiększone limity dla klienta MySQL
max_allowed_packet = 512M



